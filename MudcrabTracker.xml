<GuiXml>
  <Controls>
    <TopLevelControl name="MudcrabTrackerIndicator" mouseEnabled="true" movable="true" clampedToScreen="false">
      <Dimensions x="180" y="25" />
      <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" />
      <OnMoveStop>
        MudcrabTracker_OnCounterMoveStop()
      </OnMoveStop>
      <Controls>
        <Label name="$(parent)Label" width="180" height="25" font="ZoFontEdit" inheritAlpha="true" color="FFFFFF"
            wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="LEFT">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
        </Label>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
